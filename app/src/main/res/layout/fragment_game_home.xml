<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_weight=".30"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_home_gamename"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:id="@+id/hGamename"
            android:textAllCaps="true"
            android:layout_marginLeft="16dp"/>

        <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opekačka u Mrkvičkovcov"
            android:layout_marginLeft="16dp"
            android:textSize="22sp"
            android:layout_below="@id/hGamename"
            android:id="@+id/view2" />

    </RelativeLayout>



    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:stretchColumns="0"
        android:layout_margin="16dp"
        android:weightSum="1"
        android:layout_weight="0.7">

        <TableRow android:layout_weight=".2">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_column="0"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:textColor="#666666"
                android:textStyle="bold"
                android:text="@string/game_home_player"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_column="1"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:textColor="#666666"
                android:text="@string/game_home_round"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:textColor="#666666"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|right"
                android:text="@string/game_home_property"
                />

        </TableRow>

        <TableRow android:layout_weight=".2">

            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_column="0"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="22sp"
                android:text="Janko Hráško"
                />
            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_column="1"
                android:textSize="22sp"
                android:singleLine="true"
                android:textColor="#000000"

                android:text="38"
                />
            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:text="96320"
                />

        </TableRow>

        <TableRow android:layout_weight=".2">

            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_column="0"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="22sp"
                android:text="Zuzička"
                />
            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_column="1"
                android:textSize="22sp"
                android:singleLine="true"
                android:textColor="#000000"

                android:text="33"
                />
            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:text="22500"
                />

        </TableRow>

        <TableRow android:layout_weight=".2">

            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_column="0"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="22sp"
                android:text="Anička Nostradamová"
                />
            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_column="1"
                android:textSize="22sp"
                android:singleLine="true"
                android:textColor="#000000"

                android:text="22"
                />
            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:text="18405"
                />

        </TableRow>


        <TableRow android:layout_weight=".2">

            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_column="0"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="22sp"
                android:text="Ferdo dlhomenný"
                />
            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_column="1"
                android:textSize="22sp"
                android:singleLine="true"
                android:textColor="#000000"

                android:text="31"
                />
            <sk.mjmgames.nostradamareal.widgets.MJMTextViewNB
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:text="17605"
                />

        </TableRow>

    </TableLayout>


</LinearLayout>